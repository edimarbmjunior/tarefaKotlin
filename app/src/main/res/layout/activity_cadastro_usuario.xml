<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        tools:context=".views.CadastroUsuarioActivity"
        >

    <EditText
            android:id="@+id/editNomeCadastroUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/nome"
            style="@style/mGrayEditText" android:drawableLeft="@drawable/ic_name"/>

    <EditText
            android:id="@+id/editEmailCadastroUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editNomeCadastroUsuario"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            style="@style/mGrayEditText" android:drawableLeft="@drawable/ic_email"/>

    <EditText
            android:id="@+id/editPasswordCadastroUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editEmailCadastroUsuario"
            android:hint="@string/senha"
            android:inputType="textPassword"
            style="@style/mGrayEditText" android:drawableLeft="@drawable/ic_lock"/>

    <Button
            android:id="@+id/buttonSaveCadastroUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cadastrar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/mDefaultButton"/>

</android.support.constraint.ConstraintLayout>